@model DiplomadoMVC_Crud_HTML_Helps_NoTipados.Models.Productos

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Datos Artículo</title>
</head>
<body>
    <div> 
        @using (Html.BeginForm("ModificacionProducto", "Home", FormMethod.Post))
        {
        <p>
            Código de Producto:
            @Html.Display("Codigo")
            @Html.Hidden("Codigo")
        </p>
            <p>
                Descripción:
                @Html.TextBox("Descripcion")
            </p>
            <p>
                Precio:
                @Html.TextBox("Precio")
            </p>
            <p>
                <input type="submit" value="Confirmar" />

            </p>
        }
    </div>
</body>
</html>
